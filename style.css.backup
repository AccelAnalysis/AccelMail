/* ===== GENERAL RESET ===== */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: "Aptos", sans-serif;
  color: #333;
  background-color: #f7f9fc;
  overflow-x: hidden;
}

/* ===== HERO SECTION ===== */
.hero {
  position: relative;
  height: 90vh;
  background: linear-gradient(135deg, #2f5597, #3e6bd9);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.hero-overlay {
  text-align: center;
  color: #fff;
  z-index: 2;
  padding: 2rem;
}

.hero-logo {
  width: 160px;
  margin-bottom: 1rem;
}

.hero-title {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
}

.hero-subtext {
  font-size: 1.1rem;
  line-height: 1.6;
  margin-bottom: 2rem;
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
}

.cta-button {
  background: #ffd965;
  color: #2f5597;
  font-weight: 600;
  padding: 0.9em 2em;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
}
.cta-button:hover {
  background: #fff2a8;
}

/* ===== ENVELOPE ANIMATION ===== */
.envelope-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 1;
}

.envelope {
  position: absolute;
  width: 50px;
  height: 35px;
  background: #fff;
  border: 2px solid #dce6f5;
  border-radius: 4px;
  opacity: 0.6;
  transform: rotate(10deg);
  animation: floatDiagonal 25s linear infinite;
}
.envelope::before {
  content: "";
  position: absolute;
  width: 50px;
  height: 17px;
  background: #dce6f5;
  clip-path: polygon(0 0, 50% 100%, 100% 0);
  top: 0;
  left: 0;
  opacity: 0.8;
}
.envelope:nth-child(1) { top: 20%; left: 10%; animation-delay: 0s; }
.envelope:nth-child(2) { top: 40%; left: 50%; animation-delay: 5s; }
.envelope:nth-child(3) { top: 70%; left: 80%; animation-delay: 10s; }
.envelope:nth-child(4) { top: 10%; left: 75%; animation-delay: 15s; }
.envelope:nth-child(5) { top: 60%; left: 25%; animation-delay: 20s; }

@keyframes floatDiagonal {
  0% {
    transform: translate(0, 0) rotate(10deg);
    opacity: 0.7;
  }
  50% {
    transform: translate(100px, -150px) rotate(20deg);
    opacity: 1;
  }
  100% {
    transform: translate(-200px, 200px) rotate(10deg);
    opacity: 0.6;
  }
}

/* ===== SECTIONS GENERAL ===== */
.section {
  padding: 4rem 1rem;
  background-color: #f7f9fc;
}

.container {
  max-width: 1100px;
  margin: 0 auto;
}

/* ===== CALCULATOR AND DESIGN ===== */
.calculator-section {
  padding: 4rem 1rem;
}

.calculator-container {
  max-width: 1100px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
}

.calculator-card, .design-card {
  background: #fff;
  border-radius: 15px;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
  padding: 2rem;
}

.calculator-card h2, .design-card h2 {
  color: #2f5597;
  margin-bottom: 1rem;
  font-weight: 700;
}

form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

label {
  font-weight: 600;
}

select, input, textarea {
  padding: 0.7em;
  border-radius: 6px;
  border: 1px solid #ccc;
}

.quantity-options {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5em;
}

.quantity-options button {
  flex: 1 1 30%;
  padding: 0.6em;
  background: #dce6f5;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  color: #2f5597;
  font-weight: 600;
}
.quantity-options button:hover {
  background: #b7c7eb;
}
.quantity-options button.active {
  background: #2f5597;
  color: #fff;
}

.form-actions button {
  background: #2f5597;
  color: #fff;
  font-weight: 600;
  padding: 0.9em 2em;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
}
.form-actions button:hover {
  background: #244578;
}

/* Design Toggle */
.design-toggle {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
}

.design-toggle label {
  cursor: pointer;
  font-weight: 600;
  color: #2f5597;
}

.design-toggle input:checked + label {
  text-decoration: underline;
}

/* ===== FOOTER ===== */
footer {
  text-align: center;
  padding: 2rem 1rem;
  background-color: #f7f9fc;
  color: #333;
}

.footer-logo {
  width: 100px;
  margin-bottom: 1rem;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 900px) {
  .calculator-container {
    grid-template-columns: 1fr;
  }
  .hero-title {
    font-size: 2rem;
  }
}